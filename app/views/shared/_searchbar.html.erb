<%# search bar %>
<div id="searchbar">
  <h5>Type anything (brand, city, category...)</h5>
  <%= form_tag cars_path, class: "simple_form search d-flex mt-0", label: "Search", method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      label: "Search",
      class: "form-control string required",
      placeholder: "e.g. Ferrari Marseille"
    %>
    <%= submit_tag "Search", class: "btn btn-flat" %>
  <% end %>
</div>





