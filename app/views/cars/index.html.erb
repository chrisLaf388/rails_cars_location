  <div class="card-grid mb-5">
    <% @cars.each do |car|%>
      <div class="card rounded" style="background-image: url(<%= "#{cl_image_path car.photo.key}" =%> )">
        <div class="card-body">
          <h5 class="card-title">
            <%= car.name %>
          </h5>
            <p class="card-text"> <%= car.category %> - <%= car.transmision %> -  <%= car.price_per_day %>â‚¬ </p>
            <%= link_to 'Go!', car_path(car), class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"style="width: 100%; height: 100vh"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>




